@model IEnumerable<BdCoin.Models.chain>

@{
    ViewData["Title"] = "Chain";
}
<section class="container" style="background-color:white;">
    <div class="col-lg-12" style="background-color:white;">
        <div class="row" style="background-color:white;">
            <div class="col-2">

            </div>
            <div class="col-8" style="text-align:center;">
                <h2>Chain</h2>
            </div>

            <div class="col-2">

            </div>
            <br><br><br><br>
        </div>

        <div class="row" style="background-color:white;">
            <div class="col-2">

            </div>
            <div class="col-8">
                <table id="myTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.index)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.previous_hash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.proof)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.timestamp)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.index)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.previous_hash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.proof)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.timestamp)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-2">

            </div>

        </div>
    </div>
</section>
